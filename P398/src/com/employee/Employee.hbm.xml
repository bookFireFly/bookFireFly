<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping >
	<class name="com.employee.Employee" table="tab_employee">
 		<id name="id" column="id" type="int">
			<generator class="native"></generator>
		</id>
		<property name="name" type="string" length="45" >
			<column name="name"/>
		</property>
		<property name="sex" type="string" length="1" >
			<column name="sex"/>
		</property>
		<property name="business" type="string" length="45" >
			<column name="business"/>
		</property>
		<property name="address" type="string" length="100" >
			<column name="address"/>
		</property>
		<property name="remark" type="string" length="200" >
			<column name="remark"/>
		</property>
	</class>
</hibernate-mapping>