<body>
<script type="text/javascript">
var now=new Date();
document.write("??")
</script>
var day=now.getday();
var week;
swich(day){
	case 1
	week="星期一";
	break;
	case 2
	week="星期二";
	break;
	case 3
	week="星期三";
	break;
	case 4
	week="星期四";
	break;
	case 5
	week="星期五";
	break;
	case 6
	week="星期六";
	break;
	default
	week="星期日";
	break;
}
document.write("今天是"+week);
</body>
